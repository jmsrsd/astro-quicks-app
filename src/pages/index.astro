---
import Layout from "../layouts/Layout.astro";
import searchIcon from "../icons/search-icon.svg?raw";
import ActionFAB from "../components/fabs/ActionFAB.astro";
import InboxFAB from "../components/fabs/InboxFAB.astro";
import TaskFAB from "../components/fabs/TaskFAB.astro";
---

<Layout>
  <div
    class="tw-flex tw-flex-row tw-items-start tw-justify-center tw-w-full tw-h-full"
  >
    <div class="tw-h-full tw-flex tw-flex-none tw-min-w-[282px]"></div>
    <div class="tw-h-full tw-flex tw-flex-none tw-w-[1px] tw-bg-[#f2f2f2]">
    </div>
    <div
      class="tw-h-full tw-flex tw-w-full tw-flex-col tw-items-start tw-justify-start"
    >
      <div
        class="tw-w-full tw-h-[58px] tw-bg-[#4F4F4F] tw-flex tw-flex-row tw-items-center tw-justify-start tw-px-6"
      >
        <Fragment set:html={searchIcon} />
      </div>
    </div>
    <div
      class="tw-absolute tw-right-[34px] tw-bottom-[27px] tw-flex tw-flex-row-reverse tw-items-center tw-justify-end tw-gap-[26px]"
    >
      <ActionFAB />
      <InboxFAB />
      <TaskFAB />
    </div>
  </div>
</Layout>
