---
const { url } = Astro;

const { props } = Astro;

for (const key of [...url.searchParams.keys()]) {
  props[key] = url.searchParams.get(key) ?? props[key];
}
---

<div
  {...props}
  id="htmx-dialog-container"
  class="tw-flex tw-flex-row-reverse tw-justify-end tw-items-end tw-gap-3"
>
  <slot />
</div>
