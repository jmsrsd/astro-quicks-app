---
import LoadingIndicator from "./loading-indicator.astro";
---

<div
  id="htmx-chat-collection-loader"
  class="tw-w-full tw-h-full tw-flex tw-flex-col tw-items-center tw-justify-center"
  hx-get="/htmx/chat.html/collection"
  hx-swap="outerHTML swap:300ms"
  hx-indicator="#htmx-chat-loading-indicator"
  hx-trigger="intersect once"
>
  <style is:inline>
    #htmx-chat-collection-loader.htmx-swapping * {
      opacity: 0;
      transition: all 300ms ease;
    }

    #htmx-chat-colleciton-loader * {
      opacity: 1;
    }
  </style>
  <LoadingIndicator />
</div>
