---
import Layout from "../layouts/Layout.astro";
import Search from "./htmx/search/index.astro";
import Dialog from "./htmx/dialog/index.astro";
---

<Layout>
  <div
    class="tw-flex tw-flex-row tw-items-start tw-justify-center tw-w-full tw-h-full"
  >
    <div class="tw-h-full tw-flex tw-flex-none tw-min-w-[282px]"></div>
    <div class="tw-h-full tw-flex tw-flex-none tw-w-[1px] tw-bg-[#f2f2f2]">
    </div>
    <div
      class="tw-h-full tw-flex tw-w-full tw-flex-col tw-items-start tw-justify-start"
    >
      <Search />
      <div class="tw-h-full tw-w-full tw-flex-col">
        <div class="tw-absolute tw-right-8 tw-bottom-8">
          <Dialog />
        </div>
      </div>
    </div>
  </div>
</Layout>
