---
import "../styles/main.css";
import { ViewTransitions } from "astro:transitions";
import { useSearchParams } from "../utils/searchParams";

interface Props {
  title?: string;
}

const { title } = Astro.props;

const { url } = Astro;

const [searchParams] = useSearchParams({ url });
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ?? `Quicks`}</title>
    <ViewTransitions />
  </head>
  <body>
    <script>
      import htmx from "htmx.org";

      htmx.on("htmx:afterSettle", function () {
        [...htmx.findAll(".htmx-settling")].forEach(htmx.remove);
      });
    </script>

    <script define:vars={{ searchParams }}>
      document.searchParams = searchParams;
    </script>

    <div
      class="tw-font-lato tw-relative tw-overflow-auto tw-bg-[#333333] tw-min-h-screen tw-min-w-full"
    >
      <div
        class="tw-absolute tw-min-w-[1120px] tw-min-h-[960px] tw-w-full tw-h-screen"
      >
        <slot />
      </div>
    </div>
  </body>
</html>
