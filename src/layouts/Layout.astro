---
import "../styles/main.css";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ?? `Quicks`}</title>
  </head>
  <body>
    <div
      class="tw-font-lato tw-relative tw-overflow-auto tw-bg-[#333333] tw-min-h-screen tw-min-w-full"
    >
      <div
        class="tw-absolute tw-min-w-[1280px] tw-min-h-[720px] tw-w-full tw-h-screen"
      >
        <slot />
      </div>
    </div>
  </body>
</html>
